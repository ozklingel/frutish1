<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="2"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="705dp"
                android:layout_weight="1"
                android:background="@mipmap/events_background">
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="welcom to fruitish!"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="200sp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:text="wanna hear about us?"
                    android:textColor="@color/design_default_color_primary"

                    android:textSize="50sp" />

                <Button
                    android:id="@+id/submito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="420sp"
                    android:gravity="center"
                    android:text="      click here      "
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_button"

                    />
                <Button
                    android:id="@+id/submits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="650sp"
                    android:gravity="center"
                    android:text="submit as seller"
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_button"
                    />

                <Button
                    android:id="@+id/submitb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="submit as buyer"
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:layout_marginTop="530sp"
                    android:background="@drawable/round_button"
                    android:textStyle="bold"

                    />
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>